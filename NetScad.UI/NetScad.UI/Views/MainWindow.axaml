<Window
    x:Class="NetScad.UI.Views.MainWindow"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:NetScad.UI.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:views="using:NetScad.UI.Views"
    xmlns:vm="using:NetScad.UI.ViewModels"
    Title="NetSCAD"
    d:DesignHeight="720"
    d:DesignWidth="1280"
    x:CompileBindings="True"
    x:DataType="vm:MainWindowViewModel"
    Background="{DynamicResource WindowBackground}"
    mc:Ignorable="d">

    <Design.DataContext>
        <!--
            This only sets the DataContext for the previewer in an IDE,
            to set the actual DataContext for runtime, set the DataContext property in code (look at App.axaml.cs)
        -->
        <vm:MainWindowViewModel />
    </Design.DataContext>
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceInclude Source="/Resources/CardResources.axaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>

    <Grid
        Margin="10"
        HorizontalAlignment="Stretch"
        VerticalAlignment="Stretch">
        <Grid.ColumnDefinitions>
            <!--  Side Drawer  -->
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
            <!--  Main content  -->
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="50" />
        </Grid.RowDefinitions>

        <StackPanel
            Margin="0,10,10,10"
            Classes="card"
            Spacing="10">
            <!--  First ContentControl  -->
            <ContentControl
                Grid.Row="0"
                Grid.Column="0"
                Button.Click="GetCreateAxesView"
                Content="{StaticResource CreateAxes}" />

            <Separator Margin="0" Visual.FlowDirection="LeftToRight" />

            <!--  Second ContentControl  -->
            <ContentControl
                Grid.Row="0"
                Grid.Column="0"
                Button.Click="GetAxesListView"
                Content="{StaticResource AxesList}"
                IsVisible="False" />

            <Separator
                Margin="0"
                IsVisible="False"
                Visual.FlowDirection="LeftToRight" />

            <!--  Third ContentControl  -->
            <ContentControl
                Grid.Row="0"
                Grid.Column="0"
                Button.Click="ToggleTheme"
                Content="{StaticResource AxesFolder}"
                IsVisible="True" />

            <Separator
                Margin="0"
                IsVisible="False"
                Visual.FlowDirection="LeftToRight" />

            <!--  Fourth ContentControl  -->
            <ContentControl
                Grid.Row="0"
                Grid.Column="0"
                Content="{StaticResource ObjectDetail}"
                IsVisible="False" />

            <Separator
                Margin="0"
                IsVisible="False"
                Visual.FlowDirection="LeftToRight" />
        </StackPanel>

        <!--  Toggle Dark/Light Mode  -->
        <ContentControl
            Grid.Row="2"
            Grid.Column="0"
            Button.Click="ToggleTheme"
            Content="{StaticResource ButtonCard2}" />

        <!--  Main View - SPA  -->
        <Border
            Grid.RowSpan="3"
            Grid.Column="1"
            Margin="10"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            BorderThickness="2"
            BoxShadow="1 1 2 0 Gray"
            Classes="card_main">
            <StackPanel Classes="card">
                <ContentControl
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Stretch"
                    HorizontalContentAlignment="Stretch"
                    VerticalContentAlignment="Stretch"
                    Content="{Binding MainViewContent}" />
            </StackPanel>
        </Border>
    </Grid>

</Window>
